---
layout: none
---
[
  {% for post in site.posts %}
    {
      "title"    : {{ post.title | escape | jsonify }},
      "tags"     : "{{ post.tags | join: ', ' }}",
      "excerpt"  : {{ post.content | strip_html | truncatewords: 32 | jsonify}},
      "url"      : "{{ site.baseurl }}{{ post.url }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]